@page "/"

@using FhirBlaze.Models

@inject AppState AppState
 
<h1>FhirBlaze</h1>

<p>Bringing Fhir and Blazor together.</p>

<AuthorizeView>
    <Authorized>
        <p>AAD OID: @AppState.UserId</p>
        <p>Practitioner Id: @AppState.PractitionerId</p>
    </Authorized>
    <NotAuthorized>
        <p>Please login to begin using FhirBlaze!</p>
    </NotAuthorized>
</AuthorizeView>

@code{

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}